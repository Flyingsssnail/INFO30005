<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel = "stylesheet" href="othercss.css">
    <title>Title</title>
</head>
<body>
<div class="container">
    <h1>Edit Profile</h1>
    <br><br><br><br>

    <div class="row cf">
        <div id="card1" class="card four col">
            <div class="image-wrapper"></div>
            <div class="text-center">
                <h6>Upload a different photo...</h6>

                <input type="file" class="name">


                <h6>About me</h6>
                <div >
                    <textarea cols= "40" rows="5"  type="text"></textarea>
                </div>
            </div>
        </div>

        <!-- edit form column -->
        <div id="card2" class="card four col">

            <h3>Personal info</h3>

            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <h5>First name:</h5>
                    <div >
                        <input class="form-control" type="text" value="<%= result.firstname%>">
                    </div>
                </div>
                <div class="form-group">
                    <h5>Last name:</h5>
                    <div class="col-lg-8">
                        <input class="form-control" type="text" value="<%= result.lastname %>">
                    </div>
                </div>
                <div class="form-group">
                    <h5>Gender</h5>
                <div class="col-lg-8">
                    <div class="ui-select">
                        <select id="user_time_zone" class="form-control">
                            <% if (result.gender === "Male") { %>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="Other">Other</option>
                            <% } %>
                            <% if (result.gender === "Female") { %>
                                    <option value="Female">Female</option>
                                    <option value="Male">Male</option>
                                    <option value="Other">Other</option>
                            <% } %>
                            <% if (result.gender === "Other") { %>
                                    <option value="Other">Other</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                            <% } %>
                        </select>
                    </div>
                </div>
                </div>
                <div class="form-group">
                    <h5>Email:</h5>
                    <div class="col-lg-8">
                        <input class="form-control" type="text" value="<%= result.email %>">
                    </div>
                </div>
            </form>
        </div>
        <div id="card2" class="card four col">

            <h3>More info</h3>
            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <h5>Phone:</h5>
                    <div class="col-md-8">
                        <input class="form-control" type="text" value="<%= result.phone %>">
                    </div>
                </div>
                <div class="form-group">
                    <h5>Password:</h5>
                    <div class="col-md-8">
                        <input class="form-control" type="password" value="11111122333">
                    </div>
                </div>
                <div class="form-group">
                    <h5>Confirm password:</h5>
                    <div class="col-md-8">
                        <input class="form-control" type="password" value="11111122333">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label"></label>
                    <div class="col-md-8">
                        <br>
                        <br>
                        <input type="button" class="btn btn-primary" value="Save Changes">
                        <span></span>
                        <input type="reset" class="btn btn-default" value="Cancel">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<hr>
</body>
</html>